{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>
        {{ player.name }}
      </h2>
      <h3>Total Earnings Amount:
        {{ player.amount }}
      </h3>
      <h6>Game/Sport of Player:
        {{ player.game }}
      </h6>
      {% if player.owner == userId %}
        <div class="btn-group">

          <a href="/players/{{ player.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/players/{{ player.id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}